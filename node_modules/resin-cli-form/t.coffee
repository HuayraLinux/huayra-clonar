form = require('./lib/form')

form.run [
		message: 'Set a static IP (optional)'
		name: 'staticIp'
		type: 'text'
	,
		message: 'Netmask'
		name: 'netmask'
		type: 'text'
		when:
			staticIp: true
	,
		message: 'Gateway'
		name: 'gateway'
		type: 'text'
		when:
			staticIp: true
]
.then (answers) ->
	console.log(answers)
